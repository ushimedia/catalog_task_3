<h2>カート内アイテム</h2>
<%= render partial: "carts/cart_item", collection: @cart_items, as: "cart_item"%>
<h2><%= "合計：#{@total&.to_s(:delimited)}円" %></h2>

<% if @total == 0 %>
<%= link_to '商品を選んでください', orders_path %>
<% else %>
<%= button_to '購入に進む', new_order_path, method: :get %>
<% end %>
<br>

<%= form_with url: recall_regular_path do |form| %>
    リスト番号<%= form.number_field :regular_number, autofocus: true, autocomplete: "regular_number", value: 1, min: 1, max: 4 %>番<br>
    <%= form.submit("「いつものあれ」リストをカートに入れる。") %>
   <% end %>
