<%= form_with(model: @product, local: true) do |form| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
  
        <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :name %><br />
      <%= form.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
  
    <div class="field">
      <%= form.label :price %><br />
      <%= form.text_field :price, autofocus: true, autocomplete: "price" %>
    </div>
  
    <div class="field">
      <%= form.label :stock %><br />
      <%= form.text_field :stock, autofocus: true, autocomplete: "stock" %>
    </div>

    <div class="field">
    <%= form.label :description %><br />
    <%= form.text_area :description, autofocus: true, autocomplete: "description" %>
  </div>


    <div class="field">
  <%= form.label :出品状況 %>
  <%= form.radio_button :status, '出品中' %>
  <%= form.label :status, '出品中', value: true %>

   <%= form.radio_button :status, '取り下げ中' %>
   <%= form.label :status, '取り下げ中', value: false %>
   </div>

   <div class="field">
   <%= form.label :image %><br />
   <%= form.file_field :image, autofocus: true, autocomplete: "image" %>
 </div>
 <br>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  