<p>商品画像: </p>
<% if @product.image.blank? %>
       <%= image_tag 'noimage.png', :size => '150x150' %>
       <% else %>
       <%= image_tag @product.image.url, :size => '150x150' %>
       <% end %>
<H5>名前: <%= @product.name %></H5>
<H5>金額: <%= @product.price.to_s(:delimited) %>円</H5>
<H5>商品説明: <%= @product.description %></H5>
<H5>在庫: 残り<%= @product.stock %>個</H5>



<%= link_to "トップページ", root_path %>


 <%= form_with url: add_regular_path do |form| %>
  <%= form.hidden_field :product_id, value: @product.id %>
  リスト番号<%= form.number_field :regular_number, autofocus: true, autocomplete: "regular_number", value: 1, min: 1, max: 4 %>番(4セットまで登録できます。)<br>
  <%= form.number_field :regular_quantity, autofocus: true, autocomplete: "regular_quantity", value: 1, min: 1, max: 999 %>個
  <%= form.submit("商品を「いつものあれ」リストに追加") %>
 <% end %>
               
       


